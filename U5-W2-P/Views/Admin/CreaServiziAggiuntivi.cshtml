@model U5_W2_P.Models.PrenotazioneServizioAggiuntivo

@{
    ViewBag.Title = "CreaServiziAggiuntivi";
}

<h2>CreaServiziAggiuntivi</h2>

@using (Html.BeginForm("CreaServiziAggiuntivi", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PrenotazioneServizioAggiuntivo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Servizi aggiuntivi", "Servizi", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ServizioAggiuntivoId, new SelectList(ViewBag.ListaServizi, "Value", "Text"), "Seleziona servizi", new { htmlAttributes = new { @class = "form-control dropdown-menu" } })
                @Html.ValidationMessageFor(model => model.ServizioAggiuntivoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Camera", "Servizi", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PrenotazioneId, new SelectList(ViewBag.ListaCamere, "Value", "Text"), "Seleziona servizi", new { htmlAttributes = new { @class = "form-control dropdown-menu" } })
                @Html.ValidationMessageFor(model => model.PrenotazioneId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataAcquisto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DataAcquisto, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.DataAcquisto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantita, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantita, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quantita, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Guarda qui i servizi richiesti per camra", "PrenotazioneServiziAggiuntivi")
</div>
